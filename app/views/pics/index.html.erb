<% @pics.each_slice(1) do |slice| %>
	<div class="row">
		<% slice.each do |pic| %>
			<div class ="smurfy span10 offset1 text-left">
				<h1 class="custom-h1">
					<%= pic.title %>
				</h1>
				<br/>
				<h2>
					<%= pic.subtitle %>
				</h2>
				<br/>
				
					<%= image_tag pic.ivatar %>

				<br/>
				<h2>
					<%= pic.message %>
				</h2>
			</div>
		<% end %>
	</div>
	<br/>
<% end %>
